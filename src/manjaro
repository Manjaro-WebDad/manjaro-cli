#!/usr/bin/env python
import sys
from Manjaro.CLI import main, color
if len(sys.argv) == 1:
    color.action("Package search example:")
    color.white(" manjaro search -p gimp")
    color.action("Package search multiple values using quotes")
    color.white(" manjaro search -p 'gimp inkscape firefox'")
    color.action("Advanced syntax")
    color.white(
        " manjaro install -p gimp -s 'gimp inkscape' -f org.gimp.GIMP")
    color.action("For command usage:")
    color.white(" manjaro command --help")
    print()
    import subprocess
    subprocess.run(["manjaro", "--help"])
else:
    main.cli()
